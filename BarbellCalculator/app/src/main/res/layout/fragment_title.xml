<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context="fragments.TitleFragment">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upperImageGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.025" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upperTitleGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.275" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upperLiftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3125" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upperGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.125" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upperComboButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5625" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleBottomGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleWorkoutGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8125" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleWorkoutBottomGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0" />

    <Button
        android:id="@+id/calculateButton"
        style="@style/TitleButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/calculate_label"
        app:layout_constraintBottom_toTopOf="@+id/middleBottomGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/upperComboButton" />

    <Button
        android:id="@+id/workoutButton"
        style="@style/TitleButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/workout_label"
        app:layout_constraintBottom_toTopOf="@+id/middleWorkoutBottomGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/middleWorkoutGuide" />

    <Button
        android:id="@+id/calculateLiftButton"
        style="@style/TitleButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/calculate_lift"
        app:layout_constraintBottom_toTopOf="@+id/middleGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/upperLiftButton" />

    <ImageView
        android:id="@+id/calculatorImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/calcpicforfragment"
        app:layout_constraintBottom_toTopOf="@+id/upperTitleGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/upperImageGuide" />

</androidx.constraintlayout.widget.ConstraintLayout>